    <!-- PlatformVersion=8,10 etc.,(Applicable for Perfecto Desktop) -->

    <test name="Automation using chrome">
        <parameter name="ExecutionMode" value="LOCAL"/>
        <parameter name="BrowserName" value="CHROME"/>
